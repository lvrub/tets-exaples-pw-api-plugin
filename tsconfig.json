{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "target": "ESNext",
    "traceResolution": false,
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    // "paths": {
    //   "*": ["*"]
    // },
    "types": ["node", "@playwright/test"]
  },
  "include": ["src/tests/**/*.ts", "playwright.config.ts", "src/declaration/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}